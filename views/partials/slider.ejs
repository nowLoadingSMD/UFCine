<div id="intro" class="slider glide">
    <div class="slider__track glide__track" data-glide-el="track">
      <ul class="slider__slides glide__slides">
        <% releasesList.forEach(function(item){ %>
          <%- include("cards/emCartazCard", {name: item.name, description: item.description, id: item._id, img: item.thumbnailHorizontalPath, exibitionLocation: item.exibitionLocation}); %> 
        <% }); %>       
      </ul>
    </div>
    <div class="slider__bullets glide__bullets" data-glide-el="controls[nav]">  
      <% for(var i = 0 ; i < releasesList.length; i += 2 ) { %>
        <button class="slider__bullet glide__bullet" data-glide-dir="=<% i %>"></button>
      <% } %>  
   
    </div>
</div>

