					<a href="portfolio.ejs"><article class="newInfo">Pessoa Desconhecida</article></a>
					<article class="titlesMedium">Elenco</article>
					<a href="portfolio.ejs"><article class="newInfo">Pessoa Desconhecida</article></a>
				</div>
				<div>
					<article class="titlesMedium">Ano</article>
					<article class="newInfo">2017</article>
					<article class="titlesMedium">Classificação</article>
					<article class="classification">+16</article>
				</div>
			</div>
			
		</div>
	</section>
	
	<% include ../partials/tabBar %>
	
